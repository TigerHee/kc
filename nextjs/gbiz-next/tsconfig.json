{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "noEmitOnError": false, 
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "*": ["./src/*"] // 相对路径的根目录
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "global.d.ts", "module.d.ts"],
  "exclude": ["node_modules", "gbiz-next"]
}
