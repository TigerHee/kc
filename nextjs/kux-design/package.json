{
  "name": "kux-design",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "release": "tsx scripts/pkg-build.ts && tsx scripts/pkg-release.ts && tsx scripts/post-release.ts",
    "dev:watch": "turbo dev:watch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "watch:kux-design": "pnpm turbo run watch --filter='@kux/design...' --parallel",
    "start:kux-design": "pnpm --filter='@kux/design' dev",
    "dev:kux-design": "concurrently -k -n WATCH,DEV \"pnpm watch:kux-design\" \"pnpm start:kux-design\"",
    "check:commitlint": "kc-web-checker -t commitlint",
    "clean": "turbo clean",
    "pkg:changelog-add": "pnpm changeset",
    "pkg:changelog-beta": "pnpm changeset version --snapshot beta",
    "pkg:changelog-release": "pnpm changeset version",
    "pkg:save-packages": "tsx scripts/pkg-save.ts"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/jsdom": "catalog:",
    "@types/node": "catalog:",
    "@types/systemjs": "catalog:",
    "chalk": "4.1.2",
    "concurrently": "^9.2.0",
    "husky": "^8.0.3",
    "inquirer": "^12.4.2",
    "kc-web-checker": "catalog:",
    "lerna-ci": "^2.0.2",
    "lint-staged": "^15.2.10",
    "ora": "^8.2.0",
    "prettier": "catalog:",
    "semver": "^7.7.1",
    "simple-git": "^3.27.0",
    "ts-node": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "undici": "^7.9.0",
    "vite": "catalog:",
    "vitest": "catalog:",
    "@playwright/test": "catalog:"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "packageManager": "pnpm@9.12.1",
  "volta": {
    "node": "20.10.0"
  },
  "pnpm": {
    "overrides": {
      "rollup": "^4.41.1"
    },
    "patchedDependencies": {
      "kc-web-checker": "patches/kc-web-checker.patch",
      "html2canvas": "patches/html2canvas.patch",
      "@natasha/release@1.0.2-beta.2": "patches/@natasha__release@1.0.2-beta.2.patch",
      "framer-motion": "patches/framer-motion.patch"
    }
  }
}