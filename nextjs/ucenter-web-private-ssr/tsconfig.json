{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"],
      "common/*": ["src/common/*"],
      "components/*": ["src/components/*"],
      "services/*": ["src/services/*"],
      "routers/*": ["src/routers/*"],
      "helper": ["src/helper"],
      "codes": ["src/codes"],
      "static/*": ["public/static/*"],
      "utils/*": ["src/utils/*"],
      "config/*": ["src/config/*"],
      "tools/*": ["src/tools/*"],
      "hocs/*": ["src/hocs/*"],
      "api/*": ["src/api/*"],
      "hooks/*": ["src/hooks/*"],
      "routes/*": ["src/routers/*"],
      "@/static/*": ["./public/static/*"]
    }
  },
  "include": [
    "src/**/*",
    "public/**/*",
    "static/**/*",
    "next-env.d.ts",
    "global.d.ts",
    "module.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
, "babel-plugins/xx.js"  ],
  "exclude": ["node_modules", "dist", ".next", ".history", "public"]
}
