  "description": "",
  "main": "app/index.js",
  "scripts": {
    "gen-lang": "node scripts/langs/gen.js",
    "local": "rm -rf .local && cross-env NODE_ENV=development USE_LOCAL=true WORKER_COUNT=2 node app/index.js",
    "dev": "cross-env NODE_ENV=development WORKER_COUNT=2 node app/index.js",
    "dev:aws": "cross-env NODE_ENV=development USE_SERVERLESS=true WORKER_COUNT=1 node app/index.js",
    "start": "cross-env NODE_ENV=production node app/index.js",
    "clean": "rm -rf dist tempDist .local",
    "lint": "eslint --ext .js app scripts utils --quiet",
    "lint:fix": "eslint --ext .js  app scripts utils --fix",
    "format": "prettier-eslint --write *.js",
    "check:commitlint": "kc-web-checker -t commitlint",
    "check:owner": "kc-web-checker -t owner",
    "prepare": "husky install"
  },
  "lint-staged": {
    "(app|scripts|utils)/**/*.{js,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "8",
    "eslint-config-egg": "12",
    "husky": "^8.0.3",
    "kc-web-checker": "0.5.4-beta.e8cab7d",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "prettier-eslint-cli": "^7.1.0",
    "yargs": "^17.7.1"
  },
  "dependencies": {
    "@kc-node/logger": "^0.2.0-beta",
    "async": "^3.2.4",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.6",
    "fs-extra": "^10.1.0",
    "isomorphic-fetch": "^3.0.0",
    "kafka-node": "^5.0.0",
