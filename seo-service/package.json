    "koa-router": "^12.0.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "node-schedule": "^2.1.1",
    "puppeteer": "15.5.0",
    "terminate": "^2.6.1",
    "urllib": "^3.17.1"
  },
  "_moduleAliases": {
    "@scripts": "./scripts",
    "@utils": "./utils",
    "@app": "./app"
